<div class= 'container'>  
  <div class="search-page">
    <div>
      <% if @tweets.exists? %>
        <h1>Results</h1>
      <% else %>
        <h1>Oop! No matching posts ...</h1>
      <% end %>
      <% @tweets.each do |tweet|%>
        <div align="center" style="border: PowderBlue 2px solid;border-radius: 20px; padding: 20px; display:inline-flex; left:40px ">
          <img src="<%= tweet.user&.user_photo %>" width="100" height="100" style="margin: 10px 0"  >
        </div>
        <% tweet.content.to_s.split(' ').each do |word| %>
          <% if word.start_with?('#') %>
            <%= link_to word, search_path(query: word) %>
          <%else %>
            <%= word %>
          <%end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= button_to "Back", tweets_path,  :class => "inbox-sf-add-btn tip", :method => :get %>     <%#= render 'shared/timeline' %>
</div>